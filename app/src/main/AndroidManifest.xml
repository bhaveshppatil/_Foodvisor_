<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.masai.foodvisor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Foodvisor">

        <activity
            android:name=".views.AddFoodActivity"
            android:exported="true" />
        <activity
            android:name=".views.IngredientsActivity"
            android:exported="true" />
        <activity
            android:name=".views.PremiumUnlocked"
            android:exported="true" />
        <activity
            android:name=".views.HomeScreen"
            android:exported="true" />
        <activity
            android:name=".views.ProfileCreation"
            android:exported="true" />
        <activity
            android:name=".views.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".views.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>